{
  "compilerOptions": {
    "module": "commonjs",
    "types": ["node"],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "target": "es6",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "pretty": true,
    "allowJs": true,
    "noEmit": false,
    "typeRoots": ["./src/interfaces", "./node_modules/@types", "./src/types"],
    "rootDir": "./src",
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    "plugins": [
      {
        "transform": "ts-transformer-keys/transformer"
      }
    ],
    "lib": ["ES2021.String", "es2017", "esnext.asynciterable"]
  },
  "include": ["./src/**/*", "./ormconfig.ts"],
  "exclude": ["node_modules"]
}
